#include<stdio.h>

int main()
{
    int n;
    printf("Input any positive integers: ");
    scanf("%d", &n);

    while(n != 1) {
        if(n % 2 == 0) {
            n /= 2;
            printf("Currrent given value is: %d\n", n);
        }
        else{
            n *= 3;
            ++n;
            printf("Current given value is: %d\n", n);
        }
        }
        return 0;
    }
   